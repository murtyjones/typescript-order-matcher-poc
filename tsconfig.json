{
	"compilerOptions": {
		"target": "es6",
		"baseUrl": "./src",
		"rootDir": "src",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": [
			"es6",
			"dom"
		],
		"esModuleInterop": true,
		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"jest.config.js"
	]
}